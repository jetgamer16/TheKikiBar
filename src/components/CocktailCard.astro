---
export interface Props {
  coctel: {
    id: string;
    name: string;
    description: string;
    price: string;
    ingredients: string[];
  };
  addToCart: (coctel: { name: string; price: number; uds: number }) => void;
}

const { coctel, addToCart } = Astro.props;

function handleAddToCart() {
  const coctelItem = {
    name: coctel.name,
    price: parseFloat(coctel.price),
    uds: 1
  };
  addToCart(coctelItem);
}
