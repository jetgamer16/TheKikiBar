<div class="make-cocktail-card">
  <h3>Make Your Cocktail</h3>
  <form onSubmit={handleSubmit}>
    <div>
      <label for="baseLiquor">Base Liquor:</label>
      <select name="baseLiquor" required>
        <option value="">Select a base liquor</option>
        {['Vodka', 'Rum', 'Tequila', 'Whiskey', 'Gin', 'Cachaça', 'Pisco', 'Bourbon'].map(liquor => (
          <option value={liquor}>{liquor}</option>
        ))}
      </select>
    </div>
    <div>
      <label>Ingredients (choose up to 3):</label>
      {uniqueIngredients.map(ingredient => (
        <div>
          <input type="checkbox" name="ingredient" value={ingredient} />
          <label>{ingredient}</label>
        </div>
      ))}
    </div>
    <button type="submit">Create Cocktail</button>
  </form>
</div>

<style>
  .make-cocktail-card {
    background: linear-gradient(135deg, #6a1b9a, #d500f9);
    color: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s;
    width: 100%;
    cursor: pointer;
    padding: 20px;
  }
  .make-cocktail-card:hover {
    transform: translateY(-10px);
  }
  .make-cocktail-card h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }
  .make-cocktail-card form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .make-cocktail-card label {
    font-size: 1rem;
    color: white;
  }
  .make-cocktail-card select, .make-cocktail-card input[type="checkbox"] {
    margin-top: 0.5rem;
  }
  .make-cocktail-card button {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    background: cyan;
    color: black;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.3s;
  }
  .make-cocktail-card button:hover {
    background: #00b3b3;
  }
</style>
